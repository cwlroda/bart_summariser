        "file": "articles/article_01.txt",
        "folder": "today_articles/",
        "titles": "today_titles.txt",
        "urls": "today_urls.txt"
    },

    "paths": {
        "data": "data/",
        "model": "facebook/bart-large-cnn"
    },

