        "top_p": 1.0,
        "temperature": 1.0,
        "use_cache": true
    },

    "output": {
        "file": "summaries/summary_01.txt",
        "folder": "today_summaries/"
    },

    "scraping": {
        "site": "today",
        "folder": "today_articles/",
        "num_articles": 1000,
        "num_pages": 10,
        "run_all": false
    },

    "summarisation": {
        "write_to_file": true,
        "run_all": true
    }
